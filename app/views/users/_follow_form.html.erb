<% unless current_user == @user %>
  <% if current_user.following?(@user) %>
    <%= form_with(model: current_user.active_follows.find_by(following_id: @user.id),html: { method: :delete }, local: true) do |f| %>
      <%= f.submit t('views.common.following') %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.active_follows.build, local: true) do |f| %>
      <%= hidden_field_tag :following_id, @user.id %>
      <%= f.submit t('views.common.follow') %>
    <% end %>
  <% end %>
<% end %>
