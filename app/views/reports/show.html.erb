<h1><%= @report.title %></h1>

<p>
  <strong><%= Report.human_attribute_name(:created_at) %>:</strong>
  <%= @report.created_at.to_date %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:poster)%>:</strong>
  <%= link_to @report.user.name, @report.user %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:content) %>:</strong>
  <%= @report.content %>
</p>

<% if current_user == @report.user %>
  <%= link_to t('views.common.edit'), edit_report_path(@report) %> |
<% end %>
<%= link_to t('views.common.back'), reports_path %>

<%= render 'comments/comments_index', commentable: @report %>

<%= render 'comments/new_comments', commentable: @report %>
